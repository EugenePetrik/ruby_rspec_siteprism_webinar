<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header"><%= t('.log_in_title') %></h3>
        <div class="row">
          <%= form_for(:logins, html: { class: "col s12" }) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.email_field :email, placeholder: t('.enter_your_email_address'), autofocus: true %>
                <%= f.label :email %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: t('.enter_your_password') %>
                <%= f.label :password, class: 'active' %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.button "<i class=\"material-icons right\">arrow_forward</i>#{t('.log_in_button')}".html_safe,
                    class: "btn orange waves-effect waves-light right" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
